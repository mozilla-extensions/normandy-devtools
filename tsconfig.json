{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "devtools/*": [
        "content/*"
      ]
    },
    "jsx": "preserve",
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "downlevelIteration": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": [
    "content/**/*",
    "tests/**/*",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
