{
  "name": "normandy-devtools",
  "version": "2.0.3",
  "description": "A set of tools for interacting with the Firefox Normandy client",
  "homepage_url": "https://github.com/mozilla/normandy-devtools",
  "private": true,
  "license": "MPL-2.0",
  "scripts": {
    "build": "npm-run-all clean build:webpack build:extension build:finalize",
    "build:extension": "web-ext build -s dist --overwrite-dest",
    "build:webpack": "webpack --mode production --progress",
    "build:webpack-dev": "webpack --mode development --progress --hide-modules",
    "build:finalize": "mv web-ext-artifacts/*.zip web-ext-artifacts/normandy-devtools.xpi",
    "clean": "rimraf dist web-ext-artifacts .webpack-cache",
    "docs": "serve docs",
    "lint": "npm-run-all lint:*",
    "lint:stylelint": "stylelint extension/**/*.less extension/**/*.css",
    "lint:eslint": "eslint webpack.config.js --max-warnings 0 extension",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "fix": "npm-run-all fix:*",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:stylelint": "yarn lint:stylelint --fix",
    "test": "jest",
    "watch": "npm-run-all build:webpack-dev --parallel --race watch:*",
    "watch:extension": "web-ext run -s dist -f nightly",
    "watch:webpack": "nodemon -w webpack.config.js -x \"webpack --progress --mode development --watch\"",
    "postinstall": "yarn clean"
  },
  "devDependencies": {
    "@babel/core": "7.10.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-decorators": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/preset-react": "7.10.1",
    "@babel/preset-typescript": "7.10.1",
    "@testing-library/jest-dom": "5.11.1",
    "@testing-library/react": "10.2.1",
    "@types/jest": "26.0.0",
    "@types/js-yaml": "3.12.4",
    "@types/rc-tree": "1.11.3",
    "@types/react": "16.9.43",
    "@types/react-router": "5.1.7",
    "@types/react-router-dom": "5.1.5",
    "@types/requestidlecallback": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.1.0",
    "babel-loader": "8.1.0",
    "babel-preset-rsuite": "4.0.1",
    "cache-loader": "4.1.0",
    "copy-webpack-plugin": "6.0.2",
    "css-loader": "3.5.3",
    "dotenv-webpack": "1.8.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-fetch-options": "0.0.5",
    "eslint-plugin-html": "6.0.2",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-mozilla": "2.4.0",
    "eslint-plugin-no-unsanitized": "3.1.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "extract-text-webpack-plugin": "3.0.2",
    "faker": "4.1.0",
    "file-loader": "6.0.0",
    "generate-json-webpack-plugin": "1.0.0",
    "html-webpack-plugin": "4.3.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.5.4",
    "less": "3.12.2",
    "less-loader": "6.1.1",
    "mini-css-extract-plugin": "0.9.0",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "react-devtools": "4.7.0",
    "serve": "^11.3.2",
    "style-loader": "1.2.1",
    "stylelint": "13.5.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "ts-jest": "25.5.1",
    "typescript": "3.9.5",
    "web-ext": "4.3.0",
    "web-ext-types": "3.2.1",
    "webpack": "4.43.0",
    "webpack-bundle-analyzer": "3.8.0",
