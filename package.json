  },
  "dependencies": {
    "auth0-js": "9.13.4",
    "autobind-decorator": "2.4.0",
    "codemirror": "5.55.0",
    "firacode": "5.2.0",
    "highlight.js": "10.0.3",
    "js-yaml": "3.14.0",
    "rc-tree": "3.7.0",
    "react": "16.13.1",
