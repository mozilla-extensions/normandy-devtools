  },
  "dependencies": {
    "auth0-js": "9.14.0",
    "autobind-decorator": "2.4.0",
    "codemirror": "5.58.1",
    "firacode": "5.2.0",
    "highlight.js": "10.2.1",
    "js-yaml": "3.14.0",
    "rc-tree": "3.10.0",
    "react": "16.13.1",
    "react-codemirror2": "7.2.1",
    "react-dom": "16.13.1",
    "react-error-boundary": "3.0.2",
    "react-router-dom": "5.2.0",
    "react-split": "2.0.9",
