{
  "name": "normandy-devtools",
  "version": "1.1.0",
  "description": "A set of tools for interacting with the Firefox Normandy client",
  "homepage_url": "https://github.com/mozilla/normandy-devtools",
  "private": true,
  "license": "MPLv2",
  "jest": {
    "globals": {
      "browser": {
        "experiments": {}
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^devtools/(.*)$": "<rootDir>/extension/content/$1",
      "\\.(less|css)$": "identity-obj-proxy"
    }
  },
  "scripts": {
    "build": "npm-run-all clean build:webpack build:extension build:finalize",
    "build:extension": "web-ext build -s dist --overwrite-dest",
    "build:webpack": "webpack --mode production --progress",
    "build:webpack-dev": "webpack --mode development --progress",
    "build:finalize": "mv web-ext-artifacts/*.zip web-ext-artifacts/normandy-devtools.zip",
    "clean": "rimraf dist web-ext-artifacts",
    "lint": "npm-run-all lint:eslint",
    "lint-fix": "npm-run-all lint:eslint-fix",
    "lint:eslint": "eslint webpack.config.js extension",
    "lint:eslint-fix": "yarn run lint:eslint --fix",
    "test": "jest",
    "watch": "npm-run-all build:webpack-dev --parallel --race watch:*",
    "watch:extension": "web-ext run -s dist",
    "watch:webpack": "webpack --progress --mode development --watch"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-async-generator-functions": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-decorators": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.5",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@testing-library/jest-dom": "5.1.1",
    "@testing-library/react": "9.4.1",
    "babel-eslint": "10.0.3",
    "babel-jest": "25.1.0",
    "babel-loader": "8.1.0",
    "copy-webpack-plugin": "5.0.5",
    "css-loader": "3.2.0",
    "eslint": "6.7.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-mozilla": "2.3.1",
    "eslint-plugin-no-unsanitized": "3.0.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.17.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "5.0.2",
    "generate-json-webpack-plugin": "0.3.1",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.1.0",
    "less": "3.10.3",
    "less-loader": "5.0.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.19.1",
    "style-loader": "1.0.1",
    "stylelint": "12.0.0",
    "stylelint-config-standard": "19.0.0",
    "stylelint-order": "3.1.1",
    "web-ext": "4.2.0",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.10"
  },
  "dependencies": {
    "@babel/helper-validator-identifier": "^7.9.5",
    "autobind-decorator": "2.4.0",
    "babel-preset-rsuite": "4.0.1",
    "codemirror": "5.49.2",
    "eslint-plugin-fetch-options": "^0.0.5",
    "eslint-plugin-html": "^6.0.0",
    "highlight.js": "9.16.2",
    "js-yaml": "3.11.0",
    "luxon": "1.21.3",
    "rc-tree": "2.1.3",
    "react": "16.12.0",
    "react-codemirror2": "6.0.0",
    "react-dom": "16.12.0",
    "react-error-boundary": "1.2.3",
    "react-router-dom": "5.1.2",
    "react-split": "2.0.7",
    "rsuite": "4.1.2"
  }
}
